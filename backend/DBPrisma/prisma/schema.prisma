generator client {
  provider = "prisma-client-js"
  previewFeatures = ["typedSql"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int         @id @default(autoincrement())
  email       String      @unique
  password    String
  firstName   String?     // antes: String
  lastName    String?     // antes: String
  birthDate   String?     // antes: String
  dni         String?     @unique
  address     String?
  inventory   Inventory[]
  createdAt   DateTime    @default(now())
  medicationSchedules MedicationSchedule[]
}

model Pharmacy {
  id              Int         @id @default(autoincrement())
  email           String      @unique
  password        String
  direccion       String?     // antes: String
  nombreFarmacia  String?     // antes: String
  razonSocial     String?     // antes: String
  cuit            String?     @unique
  inventory       Inventory[]
  createdAt       DateTime    @default(now())
}


model Medication {
  id          Int         @id @default(autoincrement())
  name        String
  dosage      String
  inventory   Inventory[]
    medicationSchedules MedicationSchedule[]
}

model Inventory {
  id            Int         @id @default(autoincrement())
  userId        Int?        
  user          User?       @relation(fields: [userId], references: [id])
  pharmacyId    Int?
  pharmacy      Pharmacy?   @relation(fields: [pharmacyId], references: [id])
  medicationId  Int
  medication    Medication  @relation(fields: [medicationId], references: [id])
  quantity      Int

  @@unique([userId, medicationId])
  @@unique([pharmacyId, medicationId])
}

model MedicationSchedule {
  id           Int        @id @default(autoincrement())
  userId       Int
  user         User       @relation(fields: [userId], references: [id])
  medicationId Int
  medication   Medication @relation(fields: [medicationId], references: [id])

  /// Array de horarios del tipo "HH:mm", por ejemplo ["08:00", "14:00", "22:00"]
  times        String[]

  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
}
